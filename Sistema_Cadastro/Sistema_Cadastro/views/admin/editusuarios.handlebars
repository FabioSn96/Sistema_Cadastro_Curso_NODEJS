<h3>Editar usuario:</h3>
<form action="/admin/usuarios/edit" method="post">
    <input type="hidden" name="id" value="{{usuario._id}}">
    <label for="nome">CPF: </label>
    <input type="number" id="cpf" name="cpf" placeholder="CPF do Usuario" class="form-control" value="{{usuario.cpf}}">
    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="Nome do usuario" class="form-control" value="{{usuario.nome}}">
    <label for="nome">Idade: </label>
    <input type="number" id="idade" name="idade" placeholder="Idade do usuario" class="form-control" value="{{usuario.idade}}">
    <label for="nome">Email: </label>
    <input type="text" id="email" name="email" placeholder="Email do usuario" class="form-control" value="{{usuario.email}}">
    <label for="nome">Senha: </label>
    <input type="text" id="senha" name="senha" placeholder="Senha do usuario" class="form-control" value="{{usuario.email}}">
    <button type="submit" class=""btn btn-success>Confirmar Edição</button>
</form>