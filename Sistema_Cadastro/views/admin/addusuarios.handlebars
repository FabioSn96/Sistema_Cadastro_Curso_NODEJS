<h3>Cadastrar Usuarios:</h3>
<form action="/admin/usuarios/new" method="POST">
    <label for="nome">CPF: </label>
    <input type="number" id="cpf" name="cpf" placeholder="CPF do Usuario" class="form-control">
    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="Nome do usuario" class="form-control">
    <label for="nome">Idade: </label>
    <input type="number" id="idade" name="idade" placeholder="Idade do usuario" class="form-control">
    <label for="nome">Email: </label>
    <input type="text" id="email" name="email" placeholder="Email do usuario" class="form-control">
    <label for="nome">Senha: </label>
    <input type="text" id="senha" name="senha" placeholder="Senha do usuario" class="form-control">
    <button type="submit" class="btn btn-success">Cadastrar Usuario</button>
</form>

